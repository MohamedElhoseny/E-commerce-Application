node {
   def result // for display purposes
   stage('Preparation') { 
        result = sayWelcome('Preparation')
        echo "${result}"
   }
   stage('Build') {
        result = sayWelcome('Preparation')
        echo "${result}"
   }
   stage('Results') {
        result = sayWelcome('Preparation')
        echo "${result}"
   }
}
def sayWelcome(String stageName){
    def msg = "Hello from ${stageName} Stage !"
    return msg
}